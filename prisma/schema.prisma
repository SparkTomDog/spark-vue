// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model DataModel {
    id        String      @id @default(uuid())
    label     String      @unique
    content   String?
    type      String      @default("folder")
    parentId  String?
    parent    DataModel?  @relation("dataFormThis", fields: [parentId], references: [id], onDelete: Restrict, onUpdate: Cascade)
    documents DataModel[] @relation("dataFormThis")
}
